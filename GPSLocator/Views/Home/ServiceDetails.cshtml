@model GPSLocator.Models.ServiceScheduler

@{
    ViewData["Title"] = "ServiceDetails";
}

<h2>ServiceDetails</h2>

<div>
    <h4>ServiceScheduler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ServiceId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ServiceId)
        </dd>
        <dt>
            Scheduled Start
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduledStartDateTime)
        </dd>
        <dt>
            Scheduled End
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduledEndDateTime)
        </dd>
        <dt>
            Actual Start
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ActualStartDateTime)
        </dd>
        <dt>
            Actual End
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ActualEndDateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Supervisor Tracker
        </dt>
        <dd>
            @if (Model.SupervisorTracker != null && Model.SupervisorTracker.Any())
            {
            <table class="table table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Latitude</th>
                        <th scope="col">Longitude</th>
                        <th scope="col">Date Time</th>
                        <th scope="col">Notification Type</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var tracker in Model.SupervisorTracker)
                    {
                        <tr>
                            <td>@tracker.Latitude</td>
                            <td>@tracker.Longitude</td>
                            <td>@tracker.Time.ToString()</td>
                            <td>@tracker.TrackerType.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
            }
        </dd>
        <dt>
            Worker Tracker
        </dt>
        <dd>
            @if (Model.WorkerTracker != null && Model.WorkerTracker.Any())
            {
                <table class="table table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Latitude</th>
                            <th scope="col">Longitude</th>
                            <th scope="col">Date Time</th>
                            <th scope="col">Notification Type</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var tracker in Model.WorkerTracker)
                        {
                        <tr>
                            <td>@tracker.Latitude</td>
                            <td>@tracker.Longitude</td>
                            <td>@tracker.Time.ToString()</td>
                            <td>@tracker.TrackerType.ToString()</td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
